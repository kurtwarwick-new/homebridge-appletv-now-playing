{
    "pluginAlias": "AppleTvNowPlayingPlatform",
    "pluginType": "platform",
    "singular": true,
    "layout": {
        "type": "section",
        "title": "Devices",
        "expandable": true,
        "expanded": true,
        "items": {
            "key": "devices",
            "type": "array",
            "orderable": false,
            "buttonText": "Add Device",
            "items": [
                "devices[].name",
                "devices[].credentials",
                "devices[].showTvAccessory"
            ]
        }
    },
    "schema": {
        "debug": {
            "title": "Debug",
            "description": "Log some helpful debug information intended for troubleshooting.",
            "type": "boolean"
        },
        "devices": {
            "type": "arrray",
            "items": {
                "title": "Devices",
                "type": "object",
                "properties": {
                    "name": {
                        "title": "Name",
                        "description": "The name you would like to expose for the device",
                        "type": "string"
                    },
                    "credentials": {
                        "title": "Credentials",
                        "description": "The credentials needed to authorise connection to the device",
                        "type": "string"
                    },
                    "showTvAccessory": {
                        "title": "Show TV Accessory (Work in progress)",
                        "description": "Expose a TV Accessory for this device",
                        "type": "boolean"
                    }
                }
            }
        }
    }
}
